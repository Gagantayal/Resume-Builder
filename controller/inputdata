    const update=await User.updateOne({email:req.user.email},{
        $push:{
          languages:languages

        }});
        if(updated)
        {
            const user=await User.findOne({email:req.user.email})
            return res.status(201).json({success:true,msg:"Language added",user});
        }
}
catch(err)
{
    console.log(err)
    throw(err);
}
}
